<domain xmlns:bhyve="http://libvirt.org/schemas/domain/bhyve/1.0" type="bhyve">
  <name>nas_name</name>
  <memory unit="KiB">8388608</memory>
  <currentMemory unit="KiB">8388608</currentMemory>
  <vcpu placement="static">2</vcpu>
  <os>
    <type arch="x86_64">hvm</type>
    <loader readonly="yes" type="pflash">/usr/local/share/uefi-firmware/BHYVE_UEFI.fd</loader>
    <boot dev="cdrom"/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <clock offset="utc"/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>destroy</on_crash>
  <devices>
    <disk type="file" device="disk">
      <driver name="file" type="raw"/>
      <source file="/tmp/ixautomation/nas_name/disk0.img"/>
      <target dev="hda" bus="sata"/>
    </disk>
    <disk type="file" device="disk">
      <driver name="file" type="raw"/>
      <source file="/tmp/ixautomation/nas_name/disk1.img"/>
      <target dev="hdb" bus="sata"/>
    </disk>
    <disk type="file" device="disk">
      <driver name="file" type="raw"/>
      <source file="/tmp/ixautomation/nas_name/disk2.img"/>
      <target dev="hdc" bus="sata"/>
    </disk>
    <disk type="file" device="disk">
      <driver name="file" type="raw"/>
      <source file="/tmp/ixautomation/nas_name/disk3.img"/>
      <target dev="hdd" bus="sata"/>
    </disk>
    <interface type="bridge">
      <model type="virtio"/>
      <source bridge="vm-ixautomation"/>
    </interface>
    <serial type="nmdm">
      <source master="/dev/nmdm-nas_name-A" slave="/dev/nmdm-nas_name-B"/>
      <target port="0"/>
    </serial>
    <console type="nmdm">
      <source master="/dev/nmdm-nas_name-A" slave="/dev/nmdm-nas_name-B"/>
      <target type="serial" port="0"/>
    </console>
    <graphics type="vnc" port="-1" autoport="yes">
      <listen type="address"/>
    </graphics>
    <video>
      <model type="gop" heads="1" primary="yes"/>
    </video>
  </devices>
</domain>